@import '~flexstyl/index'

.sled

  .dots
    box-sizing border-box
    position absolute
    text-align center
    overflow hidden
    bottom 1em
    width 100%
    z-index 1

    .dotsWrapper
      @extend .flex-line, .between
      padding .25em

      .dot
        @extend .fn-shrink
        margin 0 .5em
        width 2em
        height @width
        cursor pointer
        background #fff
        transition .5s
        border-radius 50%
        box-shadow 0 .1em .2em rgba(#000, .5)

        &:hover
          transition .2s
          background #ddd
          transform scale(1.1)

        &.active, &:active
          background rgb(0, 127, 167)
          transition .2s
          transform scale(.9)
