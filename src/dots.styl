@import '~flexstyl/index'

.sled

  .dots
    @extend .flex, .between
    box-sizing border-box
    position absolute
    padding 0 2em
    bottom 1em
    width 100%
    z-index 1

    .dot
      width 2em
      height @width
      cursor pointer
      background #fff
      transition .5s
      border-radius 50%
      box-shadow 0 .1em .2em rgba(#000, .5)

      &:hover
        transition .2s
        background #ddd
        transform scale(1.1)

      &.active, &:active
        background rebeccapurple
        transition .2s
        transform scale(.9)
